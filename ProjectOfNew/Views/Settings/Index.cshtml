@model LiveInRealProject.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Password Page</h1>
<form method="post">
    @Html.Label("Name")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    @Html.Label("Last Name")
    <input type="text" asp-for="LastName" class="form-control" />
    <br />
    @Html.Label("Gender")
    <input type="text" asp-for="Gender" class="form-control" />
    <br />
    @Html.Label("Mail")
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    @Html.Label("Password")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Confirm Password")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Save a change </button>
</form>

